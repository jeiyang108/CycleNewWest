<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBase"
    tools:context="com.project.lyt.cyclenewwest.Activity.FavouritesActivity">

    <include layout="@layout/toolbar_main" android:id="@+id/toolbar"/>

    <TextView
        android:id="@+id/lbl_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/lbl_fav"
        style="@style/LblBasic"/>

    <ListView
        android:id="@+id/lst_fav"
        style="@style/LstBasic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"/>

</LinearLayout>
