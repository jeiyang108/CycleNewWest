<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BtnBasic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="BtnAccent" parent="@style/BtnBasic">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="LblBasic">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorDark</item>
    </style>

    <style name="LblAccent" parent="@style/LblBasic">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/input_bg</item>
    </style>

    <style name="SpnBasic">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/input_bg_half</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="LstBasic">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/results_bg</item>
    </style>

    <style name="EdtBasic">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/input_bg</item>
    </style>

    <style name="ThemeOverlay.MyTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:listPreferredItemHeightSmall">70dp</item>
    </style>

</resources>
